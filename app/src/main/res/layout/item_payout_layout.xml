<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_6sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_12sdp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nice Herbal Beauty Shop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#1B262C"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvName"
                app:layout_constraintBottom_toBottomOf="@id/tvName"
                android:text="12/04/2021"
                android:textColor="#3282B8"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans_regular"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="@id/tvName"
                android:text="Amount : AED 200"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="#979797"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/_3sdp"/>

            <ImageView
                android:id="@+id/clock"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/amount"
                app:layout_constraintStart_toStartOf="@id/amount"
                android:src="@drawable/clock"
                android:layout_marginTop="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/clock"
                app:layout_constraintTop_toTopOf="@id/clock"
                app:layout_constraintBottom_toBottomOf="@id/clock"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="12:00 am"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="14sp"
                android:textColor="#979797"/>

            <ImageView
                android:id="@+id/calender"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintStart_toEndOf="@id/time"
                app:layout_constraintTop_toTopOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@id/time"
                android:src="@drawable/calender"
                android:layout_marginStart="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/calender"
                app:layout_constraintTop_toTopOf="@id/calender"
                app:layout_constraintBottom_toBottomOf="@id/calender"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="09/04/2021"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="14sp"
                android:textColor="#979797"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>