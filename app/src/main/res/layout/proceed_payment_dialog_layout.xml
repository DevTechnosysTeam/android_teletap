<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_30sdp">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:src="@drawable/close_blue_icon"
        android:padding="@dimen/_5sdp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_amount"
        android:textColor="@color/text_colour"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:fontFamily="@font/open_sans_semibold"/>

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_select_the_method_with_which_you_want_to_proceed_the_payment"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="#17192D"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:textSize="17sp"/>

    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        >
        <TextView
            android:id="@+id/ocrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ocr"
            android:layout_toStartOf="@id/nfcText"
            android:layout_marginEnd="@dimen/_30sdp"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="17sp"
            android:textColor="#3282B8"
            />

        <TextView
            android:id="@+id/nfcText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nfc"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="17sp"
            android:textColor="#3282B8"
            />
    </RelativeLayout>

</LinearLayout>

</layout>