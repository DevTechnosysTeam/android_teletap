<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddContact">

    <include
        android:id="@+id/toolBarAC"
        layout="@layout/toolbar_blue_layout"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameAC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/switch_colour"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:hintTextColor="#B7BEC5"
        android:hint="@string/name"
        android:textColorHint = "#B7BEC5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
        app:boxCornerRadiusBottomStart="@dimen/_5sdp"
        app:boxCornerRadiusTopEnd="@dimen/_5sdp"
        app:boxCornerRadiusTopStart="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBarAC"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edNameAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:textColorHint="#B7BEC5"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans_semibold"
            android:inputType="textPersonName"
            tools:ignore="Autofill" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailAC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/switch_colour"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:hintTextColor="#B7BEC5"
        android:hint="@string/email"
        android:textColorHint = "#B7BEC5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
        app:boxCornerRadiusBottomStart="@dimen/_5sdp"
        app:boxCornerRadiusTopEnd="@dimen/_5sdp"
        app:boxCornerRadiusTopStart="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@+id/nameAC"
        app:layout_constraintEnd_toEndOf="@+id/nameAC"
        app:layout_constraintTop_toBottomOf="@+id/nameAC"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edEmailAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:textColorHint="#B7BEC5"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans_semibold"
            android:inputType="textEmailAddress"
            tools:ignore="Autofill" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/countryCodeAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/switch_colour"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:hintTextColor="#B7BEC5"
            android:hint="@string/country_code"
            android:textColorHint = "#B7BEC5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
            app:boxCornerRadiusBottomStart="@dimen/_5sdp"
            app:boxCornerRadiusTopEnd="@dimen/_5sdp"
            app:boxCornerRadiusTopStart="@dimen/_5sdp"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="@+id/emailAC"
            app:layout_constraintEnd_toEndOf="@+id/emailAC"
            app:layout_constraintTop_toBottomOf="@+id/emailAC"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edCountryCodeAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#262626"
                android:textColorHint="#B7BEC5"
                android:textSize="14sp"
                android:focusableInTouchMode="false"
                android:maxLength="16"
                android:fontFamily="@font/open_sans_semibold"
                android:inputType="phone"
                tools:ignore="Autofill" />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/switch_colour"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:hintTextColor="#B7BEC5"
        android:hint="@string/mobile_number"
        android:textColorHint = "#B7BEC5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
        app:boxCornerRadiusBottomStart="@dimen/_5sdp"
        app:boxCornerRadiusTopEnd="@dimen/_5sdp"
        app:boxCornerRadiusTopStart="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@+id/countryCodeAC"
        app:layout_constraintEnd_toEndOf="@+id/countryCodeAC"
        app:layout_constraintTop_toBottomOf="@+id/countryCodeAC"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edMobileNoAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:textColorHint="#B7BEC5"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans_semibold"
            android:inputType="phone"
            tools:ignore="Autofill" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSaveAC"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintStart_toStartOf="@+id/mobile"
        app:layout_constraintEnd_toEndOf="@+id/mobile"
        app:layout_constraintTop_toBottomOf="@+id/mobile"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/open_sans_semibold"
        android:background="@drawable/blue_btn_round_corner_bg"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>